mixin sectionTitle(firstWord, secondWord, subtitle, desc)
    .section__title.title
        .title__header.title-header
            h2.title-header__main= firstWord + " "
                span.title-header__main--orange= secondWord
            p.title-header__main-secondary= subtitle
        img(src="images/separator.png", class="title__separator")
        p.title__desc= desc
